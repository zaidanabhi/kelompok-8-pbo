<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    android:background="@drawable/gradient_background"
    tools:showIn="@layout/app_bar_main">

    <com.synnapps.carouselview.CarouselView
        android:id="@+id/carouselView"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:fillColor="#FFFFFFFF"
        app:pageColor="#00000000"
        app:radius="6dp"
        app:slideInterval="3000"
        app:strokeColor="#FF777777"
        app:strokeWidth="1dp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:layout_below="@+id/carouselView">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">

        <Button
            android:layout_width="120dp"
            android:layout_height="@dimen/tinggi"
            android:text="Nama"
            android:id="@+id/nama"
            android:background="@drawable/buttonbulattt"
            android:textColor="@color/colorPrimary"
            android:drawableTop="@drawable/baseline_drive_file_rename_outline_24"
            android:padding="5dp"
            android:textSize="12sp"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="@dimen/tinggi"
            android:text="Kalkulator"
            android:id="@+id/kalkulator"
            android:background="@drawable/buttonbulattt"
            android:textColor="@color/colorPrimary"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:drawableTop="@drawable/equal_48px"
            android:padding="5dp"
            android:textSize="12sp"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="@dimen/tinggi"
            android:text="Lingkaran"
            android:id="@+id/lingkaran"
            android:background="@drawable/buttonbulattt"
            android:textColor="@color/colorPrimary"
            android:drawableTop="@drawable/circle_48px"
            android:padding="5dp"
            android:textSize="12sp"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">

            <Button
                android:layout_width="@dimen/lebar"
                android:layout_height="@dimen/tinggi"
                android:text="Bilangan"
                android:id="@+id/bilangan"
                android:background="@drawable/buttonbulattt"
                android:textColor="@color/colorPrimary"
                android:drawableTop="@drawable/pin_48px"
                android:padding="5dp"
                android:textSize="12sp"/>

            <Button
                android:layout_width="@dimen/lebar"
                android:layout_height="@dimen/tinggi"
                android:text="Login"
                android:id="@+id/login"
                android:background="@drawable/buttonbulattt"
                android:textColor="@color/colorPrimary"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:drawableTop="@drawable/login_48px"
                android:padding="5dp"
                android:textSize="12sp"/>

            <Button
                android:layout_width="@dimen/lebar"
                android:layout_height="@dimen/tinggi"
                android:text="Sign Up"
                android:id="@+id/signup"
                android:background="@drawable/buttonbulattt"
                android:textColor="@color/colorPrimary"
                android:drawableTop="@drawable/person_add_48px"
                android:padding="5dp"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">

            <Button
                android:layout_width="@dimen/lebar"
                android:layout_height="@dimen/tinggi"
                android:text="Calculator"
                android:id="@+id/calculator"
                android:background="@drawable/buttonbulattt"
                android:textColor="@color/colorPrimary"
                android:drawableTop="@drawable/calculate_48px"
                android:padding="5dp"
                android:textSize="12sp"/>

            <Button
                android:layout_width="@dimen/lebar"
                android:layout_height="@dimen/tinggi"
                android:text="BMI"
                android:id="@+id/bmi"
                android:background="@drawable/buttonbulattt"
                android:textColor="@color/colorPrimary"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:drawableTop="@drawable/accessibility_new_48px"
                android:padding="5dp"
                android:textSize="12sp"/>

            <Button
                android:layout_width="@dimen/lebar"
                android:layout_height="@dimen/tinggi"
                android:text="List View"
                android:id="@+id/listview"
                android:background="@drawable/buttonbulattt"
                android:textColor="@color/colorPrimary"
                android:drawableTop="@drawable/list_48px"
                android:padding="5dp"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">

            <Button
                android:layout_width="@dimen/lebar"
                android:layout_height="@dimen/tinggi"
                android:text="Catatan"
                android:id="@+id/catatan"
                android:background="@drawable/buttonbulattt"
                android:textColor="@color/colorPrimary"
                android:drawableTop="@drawable/edit_note_48px"
                android:padding="5dp"
                android:textSize="12sp"/>

            <Button
                android:layout_width="@dimen/lebar"
                android:layout_height="@dimen/tinggi"
                android:text="File"
                android:id="@+id/internalexternal"
                android:background="@drawable/buttonbulattt"
                android:textColor="@color/colorPrimary"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:drawableTop="@drawable/folder_48px"
                android:padding="5dp"
                android:textSize="12sp"/>

            <Button
                android:layout_width="@dimen/lebar"
                android:layout_height="@dimen/tinggi"
                android:text="Storage"
                android:id="@+id/storage"
                android:background="@drawable/buttonbulattt"
                android:textColor="@color/colorPrimary"
                android:drawableTop="@drawable/inventory_2_48px"
                android:padding="5dp"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">

            <Button
                android:layout_width="@dimen/lebar"
                android:layout_height="@dimen/tinggi"
                android:text="List"
                android:id="@+id/list"
                android:background="@drawable/buttonbulattt"
                android:textColor="@color/colorPrimary"
                android:drawableTop="@drawable/list_alt_48px"
                android:padding="5dp"
                android:textSize="12sp"/>

            <Button
                android:layout_width="@dimen/lebar"
                android:layout_height="@dimen/tinggi"
                android:text="SQLite"
                android:id="@+id/sqlite"
                android:background="@drawable/buttonbulattt"
                android:textColor="@color/colorPrimary"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:drawableTop="@drawable/table_48px"
                android:padding="5dp"
                android:textSize="12sp"/>

            <Button
                android:layout_width="@dimen/lebar"
                android:layout_height="@dimen/tinggi"
                android:text="MySQL"
                android:id="@+id/mysql"
                android:background="@drawable/buttonbulattt"
                android:textColor="@color/colorPrimary"
                android:drawableTop="@drawable/database_48px"
                android:padding="5dp"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="@dimen/lebar"
                android:layout_height="@dimen/tinggi"
                android:text="CEK GPS"
                android:id="@+id/gps"
                android:background="@drawable/buttonbulattt"
                android:textColor="@color/colorPrimary"
                android:drawableTop="@drawable/location_on_48px"
                android:padding="5dp"
                android:textSize="12sp"/>

            <Button
                android:layout_width="@dimen/lebar"
                android:layout_height="@dimen/tinggi"
                android:text="Seluler"
                android:id="@+id/seluler"
                android:background="@drawable/buttonbulattt"
                android:textColor="@color/colorPrimary"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:drawableTop="@drawable/signal_cellular_alt_48px"
                android:padding="5dp"
                android:textSize="12sp"/>

            <Button
                android:layout_width="@dimen/lebar"
                android:layout_height="@dimen/tinggi"
                android:text="Sensor"
                android:id="@+id/sensor"
                android:background="@drawable/buttonbulattt"
                android:textColor="@color/colorPrimary"
                android:drawableTop="@drawable/sensors_48px"
                android:padding="5dp"
                android:textSize="12sp"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>