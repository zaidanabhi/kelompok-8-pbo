<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/green5"
    tools:context=".KalkulatorActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Kalkulator Sederhana"
        android:fontFamily="sans-serif"
        android:textColor="@color/putih"
        android:textSize="36sp"
        android:layout_marginTop="40dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="150dp"
        app:cardCornerRadius="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#FFFFF0">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textColor="@color/hitam"
        android:text="Input Angka Pertama"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Angka Pertama"
        android:fontFamily="sans-serif"
        android:textColor="@color/hitam"
        android:inputType="number"
        android:id="@+id/angka1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textColor="@color/hitam"
        android:text="Input Angka Kedua"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textColor="@color/hitam"
        android:hint="Angka Kedua"
        android:inputType="number"
        android:id="@+id/angka2"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:orientation="horizontal">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="+"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_corner"
        android:textColor="@color/putih"
        android:id="@+id/btnPlus"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-"
            android:layout_marginRight="10dp"
            android:background="@drawable/rounded_corner"
            android:textColor="@color/putih"
            android:id="@+id/btnMinus"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="x"
            android:layout_marginRight="10dp"
            android:background="@drawable/rounded_corner"
            android:textColor="@color/putih"
            android:id="@+id/btnKali"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="/"
            android:layout_marginRight="10dp"
            android:background="@drawable/rounded_corner"
            android:textColor="@color/putih"
            android:id="@+id/btnBagi"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hasil"
        android:layout_gravity="center"
        android:fontFamily="@font/roboto_bold"
        android:textSize="24dp"
        android:textColor="@color/hitam"
        android:id="@+id/txtHasil"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>