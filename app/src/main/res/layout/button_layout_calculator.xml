<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="5"
        android:columnCount="6">

        <Button
            android:id="@+id/btnHapus"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="AC"
            android:textSize="25sp"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_column="0"
            android:textColor="@color/orange"
            android:background="@color/colorPrimaryDark"/>

        <ImageView
            android:id="@+id/btnBackspace"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:padding="35dp"
            android:src="@drawable/baseline_backspace_24"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@color/colorPrimaryDark"/>

        <Button
            android:id="@+id/btnPersen"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="%"
            android:textSize="25sp"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_column="2"
            android:textColor="@color/orange"
            android:background="@color/colorPrimaryDark"/>

        <Button
            android:id="@+id/btnBagi"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="/"
            android:textSize="25sp"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_column="3"
            android:textColor="@color/orange"
            android:background="@color/colorPrimaryDark"/>

        <Button
            android:id="@+id/btnTujuh"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="7"
            android:textSize="25sp"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_column="0"
            android:textColor="@color/putih"
            android:background="@color/colorPrimaryDark"/>

        <Button
            android:id="@+id/btnDelapan"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="8"
            android:textSize="25sp"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_column="1"
            android:textColor="@color/putih"
            android:background="@color/colorPrimaryDark"/>

        <Button
            android:id="@+id/btnSembilan"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="9"
            android:textSize="25sp"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_column="2"
            android:textColor="@color/putih"
            android:background="@color/colorPrimaryDark"/>

        <Button
            android:id="@+id/btnKali"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="x"
            android:textSize="25sp"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_column="3"
            android:textColor="@color/orange"
            android:background="@color/colorPrimaryDark"/>

        <Button
            android:id="@+id/btnEmpat"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="4"
            android:textSize="25sp"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_column="0"
            android:textColor="@color/putih"
            android:background="@color/colorPrimaryDark"/>

        <Button
            android:id="@+id/btnLima"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="5"
            android:textSize="25sp"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_column="1"
            android:textColor="@color/putih"
            android:background="@color/colorPrimaryDark"/>

        <Button
            android:id="@+id/btnEnam"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="6"
            android:textSize="25sp"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_column="2"
            android:textColor="@color/putih"
            android:background="@color/colorPrimaryDark"/>

        <Button
            android:id="@+id/btnKurang"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="-"
            android:textSize="25sp"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_column="3"
            android:textColor="@color/orange"
            android:background="@color/colorPrimaryDark"/>

        <Button
            android:id="@+id/btnSatu"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="1"
            android:textSize="25sp"
            android:layout_columnWeight="1"
            android:layout_row="3"
            android:layout_column="0"
            android:textColor="@color/putih"
            android:background="@color/colorPrimaryDark"/>

        <Button
            android:id="@+id/btnDua"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="2"
            android:textSize="25sp"
            android:layout_columnWeight="1"
            android:layout_row="3"
            android:layout_column="1"
            android:textColor="@color/putih"
            android:background="@color/colorPrimaryDark"/>

        <Button
            android:id="@+id/btnTiga"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="3"
            android:textSize="25sp"
            android:layout_columnWeight="1"
            android:layout_row="3"
            android:layout_column="2"
            android:textColor="@color/putih"
            android:background="@color/colorPrimaryDark"/>

        <Button
            android:id="@+id/btnTambah"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="+"
            android:textSize="25sp"
            android:layout_columnWeight="1"
            android:layout_row="3"
            android:layout_column="3"
            android:textColor="@color/orange"
            android:background="@color/colorPrimaryDark"/>

        <Button
            android:id="@+id/btnTitik"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="."
            android:textSize="25sp"
            android:layout_columnWeight="1"
            android:layout_row="4"
            android:layout_column="0"
            android:textColor="@color/putih"
            android:background="@color/colorPrimaryDark"/>

        <Button
            android:id="@+id/btnNol"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="0"
            android:textSize="25sp"
            android:layout_columnWeight="1"
            android:layout_row="4"
            android:layout_column="1"
            android:textColor="@color/putih"
            android:background="@color/colorPrimaryDark"/>

        <Button
            android:id="@+id/btnSamaDengan"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="="
            android:textSize="25sp"
            android:layout_columnWeight="1"
            android:layout_row="4"
            android:layout_columnSpan="2"
            android:textColor="@color/hitam"
            android:background="@color/orange"/>

    </GridLayout>

</RelativeLayout>